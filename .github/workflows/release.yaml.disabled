name: release

on:
  push:
    tags: [v*]

jobs:
  go-release:
    uses: lrstanley/.github/.github/workflows/lang-go-release.yml@master
    secrets: inherit
    with:
      upload-artifacts: true
      has-ghcr: true
  docker-release:
    uses: lrstanley/.github/.github/workflows/docker-release.yml@master
    secrets: inherit
    with:
      scan: false
