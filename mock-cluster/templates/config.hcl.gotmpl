ui = true
disable_mlock = true
api_addr = "http://{{ .NodeHostname }}:8200"
cluster_addr = "http://{{ .NodeHostname }}:8201"
max_lease_ttl = "8766h"
default_lease_ttl = "168h"

listener "tcp" {
  address     = "0.0.0.0:8200"
  tls_disable = true
}

storage "raft" {
  path    = "/vault/data"
  node_id = {{ .NodeHostname | quote }}
  retry_join {
    leader_api_addr = "http://vault1:8200"
  }
}
